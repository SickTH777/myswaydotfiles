#Polkit floating
for_window [app_id="org.kde.polkit-kde-authentication-agent-1"] {
    floating enable
    border none
}
for_window [app_id="mate-polkit"] floating enable
for_window [app_id="mate-polkit"] resize set 400 200
for_window [app_id="mate-polkit"] move position center

# CoreCtrl - always float
for_window [app_id="peazip"] floating enable
for_window [sandbox_app_id="io.github.peazip.PeaZip"] floating enable
for_window [app_id="corectrl"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [title="Open File"] floating enable
for_window [app_id="blueman-manager"] floating enable
for_window [title="^Picture in picture$"] floating enable, sticky enable
for_window [window_role="pop-up"] floating enable
for_window [app_id="dolphin"] floating enable
# Steam floating windows
for_window [class="^Steam$" title="^Friends$"] floating enable
for_window [class="^Steam$" title="^Friends List$"] floating enable
for_window [class="^Steam$" title=".* - Chat$"] floating enable
for_window [class="^Steam$" title="^Steam Keyboard$"] floating enable
for_window [class="^Steam$" title="^Settings$"] floating enable
for_window [class="^Steam$" title="^Add Game$"] floating enable
# Optional: Make floating windows centered and set size
for_window [app_id="corectrl"] move position center
for_window [class="^Steam$" title="^Friends$"] move position center
